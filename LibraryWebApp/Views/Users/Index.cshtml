@model IEnumerable<LibraryWebApp.Models.UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>Users</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Add User</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@item.User.FirstName @item.User.LastName</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
