@model LibraryWebApp.Models.Book

@{
    ViewData["Title"] = "Edit";
}

    <div class="p-3">
        <h1>Edit Book</h1>
        <div class="col-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label fw-bold"></label>
                    <input asp-for="Title" class="edit-book__form-control form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Author" class="control-label fw-bold"></label>
                    <input asp-for="Author" class="edit-book__form-control form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="ReleaseDate" class="control-label fw-bold"></label>
                    <input asp-for="ReleaseDate" class="edit-book__form-control form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Genre" class="control-label fw-bold"></label>
                    <input asp-for="Genre" class="edit-book__form-control form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="CoverImageUrl" class="control-label fw-bold"></label>
                    <input asp-for="CoverImageUrl" class="edit-book__form-control form-control" />
                    <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Description" class="control-label fw-bold"></label>
                    <textarea asp-for="Description" class="edit-book__form-control form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <input class="btn btn-primary" type="button" onclick="history.go(-1)" value="Cancel" />
                </div>
            </form>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
