@model LibraryWebApp.Models.Book

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex" >
    <div class="flex-shrink-0 p-3 bg-white sidebar">
        <p>
            <a asp-action="Index">Back to List</a>
        </p>
        <br />
        <ul class="list-unstyled ps-0"></ul>
    </div>
    <div class="p-3" >
        <h1>Add Book</h1>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label fw-bold"></label>
                        <input asp-for="Title" class="create-book__form-control form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Author" class="control-label fw-bold"></label>
                        <input asp-for="Author" class="create-book__form-control form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="ReleaseDate" class="control-label fw-bold"></label>
                        <input asp-for="ReleaseDate" class="create-book__form-control form-control" />
                        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label fw-bold"></label>
                        <input asp-for="Genre" class="create-book__form-control form-control" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="CoverImageUrl" class="control-label fw-bold"></label>
                        <input asp-for="CoverImageUrl" class="create-book__form-control form-control" />
                        <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Description" class="control-label fw-bold"></label>
                        <textarea asp-for="Description" class="create-book__form-control form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
