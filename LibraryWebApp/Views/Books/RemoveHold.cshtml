@model LibraryWebApp.Models.WaitingListItem

@{
    ViewData["Title"] = "Remove Hold";
    DateOnly leaseProjectedEndDate = DateOnly.FromDateTime(DateTime.Now).AddDays(14);
}

<div class="p-3">
    <div class="row">
        <div class="col-sm-2">
            <img src="@Html.DisplayFor(model => model.Book.CoverImageUrl)" class="card-img-top" alt="@Html.DisplayFor(model => model.Book.Title) cover">
        </div>
        <div class="col-sm-10">
            <h4>
                @Html.DisplayFor(model => model.Book.Title)
            </h4>
            <div>
                by @Html.DisplayFor(model => model.Book.Author)
            </div>
            <br />
            @if (Model.Book.WaitingTime > 0)
            {
                <div class="fw-bold text-danger">
                    Once hold is removed you will not be able to reinstate. You will have to place a new hold instead. Are you sure you want to proceed?
                </div>
            }
            <br />
            <form asp-action="RemoveHold">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Remove Hold Now" class="btn btn-danger" />
                <input class="btn btn-primary"  type="button" onclick="history.go(-1)" value="Go Back" />
            </form>
        </div>
    </div>
</div>