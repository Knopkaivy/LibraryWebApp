@model LibraryWebApp.Models.Book

@{
    ViewData["Title"] = "Place Hold";
    DateOnly leaseProjectedEndDate = DateOnly.FromDateTime(DateTime.Now).AddDays(14);
}

<div class="d-flex">
    <div class="flex-shrink-0 p-3 bg-white sidebar">
        <p>
            <a asp-action="Index">Back to List</a>
        </p>
        <br />
        <ul class="list-unstyled ps-0"></ul>
    </div>
    <div class="p-3">
        <div class="row">
            <div class="col-sm-2">
                <img src="@Html.DisplayFor(model => model.CoverImageUrl)" class="card-img-top" alt="@Html.DisplayFor(model => model.Title) cover">
            </div>
            <div class="col-sm-10">
                <h4>
                    @Html.DisplayFor(model => model.Title)
                </h4>
                <div>
                    by @Html.DisplayFor(model => model.Author)
                </div>
                <br />
                @if(Model.WaitingTime > 0)
                {
                    <div class="fw-bold">
                        Estimated waiting time: <span class="text-primary" >@Model.WaitingTime weeks</span>
                    </div>
                }
                <br />
                <form asp-action="PlaceHold">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Place Hold Now" class="btn btn-warning" />
                </form>
            </div>
        </div>
    </div>
</div>