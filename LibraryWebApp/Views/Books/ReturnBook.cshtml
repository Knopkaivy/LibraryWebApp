@model LibraryWebApp.Models.Book

@{
    ViewData["Title"] = "Return Book";
    DateOnly leaseProjectedEndDate = DateOnly.FromDateTime(DateTime.Now).AddDays(14);
}

<div class="p-3">
    <div class="row">
        <div class="col-sm-2">
            <img src="@Html.DisplayFor(model => model.CoverImageUrl)" class="card-img-top" alt="@Html.DisplayFor(model => model.Title) cover">
        </div>
        <div class="col-sm-10">
            <h4>
                @Html.DisplayFor(model => model.Title)
            </h4>
            <div>
                by @Html.DisplayFor(model => model.Author)
            </div>
            <br />
            <div class="fw-bold text-success">
                You can return book early if you finished reading it already.
            </div>
            <br />
            <form asp-action="ReturnBook">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Return Now" class="btn btn-success" />
                <input class="btn btn-primary" type="button" onclick="history.go(-1)" value="Go Back" />
            </form>
        </div>
    </div>
</div>